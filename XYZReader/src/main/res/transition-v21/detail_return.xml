<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together">

    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@+id/article_body"/>
            <target android:targetId="@+id/detail_collapsing_toolbar" />
            <target android:targetId="@+id/appbar_detail" />
            <target android:targetId="@+id/meta_bar" />
        </targets>
    </slide>

    <fade android:fadingMode="fade_out" android:duration="10">
        <targets>
            <target android:excludeId="@+id/article_body" />
        </targets>
    </fade>
</transitionSet>